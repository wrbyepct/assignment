# ==================== Django 設定 ====================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

DJANGO_SUPERUSER_PASSWORD="admin"
DJANGO_SUPERUSER_USERNAME="admin"
DJANGO_SUPERUSER_EMAIL="admin@example.com"

# ==================== 資料庫設定 ====================
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# ==================== ETL 設定 ====================
CSV_URL=https://eip.fia.gov.tw/data/BGMOPEN1.csv
BATCH_SIZE=10000
CHUNK_SIZE=50000

# ==================== AWS 設定 ====================
AWS_DEFAULT_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ==================== CloudWatch 設定 ====================
# Log Group 名稱（需與 Terraform 設定一致）
# 所有 ETL 相關的 log 都會送到這個 group
CLOUDWATCH_LOG_GROUP=/docker/etl

# Log Stream 名稱
# console: watchtower 送的 stdout/stderr
# file: CloudWatch Agent 送的實體檔案 log
CLOUDWATCH_LOG_STREAM_CONSOLE=console
CLOUDWATCH_LOG_STREAM_FILE=file

# ==================== Log 設定 ====================
LOG_LEVEL=INFO
